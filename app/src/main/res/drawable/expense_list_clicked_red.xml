<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="3dp" />
            <gradient android:angle="90" android:endColor="@color/colorPrimaryDark" android:startColor="@color/colorPrimary" />
            <stroke android:width="1dp" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="3dp" />
            <gradient android:angle="180" android:endColor="@color/colorRedDark" android:centerColor="@color/colorRed" android:centerY="1" android:startColor="@color/white" />
            <stroke android:width="1dp"></stroke>

        </shape>
    </item>
</selector>